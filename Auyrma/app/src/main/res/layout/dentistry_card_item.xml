<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0a529e">

        <ImageView
            android:id="@+id/bg_curve"
            android:layout_marginStart="-40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotationX="180"
            android:src="@drawable/curve_background" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_alignEnd="@id/bg_curve"
            android:layout_marginTop="15dp"
            android:textAlignment="textEnd"
            android:text="JOHN DOE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

<!--        <TextView-->
<!--            android:id="@+id/tv_profession"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/tv_name"-->
<!--            android:layout_alignEnd="@id/tv_name"-->
<!--            android:layout_marginTop="0dp"-->
<!--            android:layout_marginStart="26dp"-->
<!--            android:text="Pharmacy"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="16sp" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/pharmacy_image_background"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:background="@drawable/circle_white_border"
                app:cardCornerRadius="16dp">
                <ImageView
                    android:id="@+id/pharmacy_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/female" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:background="@drawable/circle_white_border">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/baseline_phone_24"
                        app:tint="#0a529e"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="555-555-5555"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_white_border">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/baseline_location_pin_24"
                        app:tint="#0a529e"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/address_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17 Sulphur Springs St.\nPawtucket, RI 02860"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:background="@drawable/circle_white_border">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/baseline_email_24"
                        app:tint="#0a529e"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lorem@ipsum.com"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:background="@drawable/circle_white_border">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/baseline_star_24"
                        app:tint="#0a529e" />
                </LinearLayout>
                <TextView
                    android:id="@+id/rating_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: 5"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_tooth"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-20dp"
            android:layout_marginTop="75dp"
            android:rotation="10"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/pharm"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
